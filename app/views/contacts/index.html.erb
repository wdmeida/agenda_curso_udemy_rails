<div class="starter-template">
  <script>
    $.notify('<%= notice %>', 'success');
  </script>  
  <h1><%= "#{t('messages.listing')} #{@contacts.model.model_name.human(count: @contacts.count)}" %></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th class="text-center"><%= @contacts.model.human_attribute_name("name") %></th>
        <th class="text-center"><%= @contacts.model.human_attribute_name("email") %></th>
        <th class="text-center"><%= @contacts.model.human_attribute_name("kind") %></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>
          
          <td>
            <%= link_to t('buttons.edit'), edit_contact_path(contact), class: "btn btn-warning" %>
            <%= link_to t('buttons.destroy'), contact, class: "btn btn-danger", 
                            method: :delete, data: { confirm: t('messages.confirm') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= paginate @contacts %>  
  <br>

  <%= link_to t('buttons.new'), new_contact_path, class: "btn btn-primary" %>
  <%= link_to  t('buttons.home'), root_path, class: "btn btn-success" %>
</div>